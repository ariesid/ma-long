# Trading Configuration (shared between BitMart and Gate.io bots)
TRADING_PAIR=SOL_USDT
TIMEFRAME=1H

# Strategy Parameters
# EMA_SHORT & EMA_LONG: Exponential Moving Average for trend detection
# Signal: Entry when EMA_SHORT > EMA_LONG (bullish crossover)
# Recommended: 9/21 (aggressive), 12/26 (balanced), 20/50 (conservative)
EMA_SHORT=12
EMA_LONG=26

# RSI_LENGTH: Period for RSI calculation (standard: 14)
RSI_LENGTH=14

# RSI_MIN & RSI_MAX: RSI range filter for entry
# Bot only enters if RSI is between MIN and MAX
# Logic: <40=oversold (avoid), 40-70=healthy zone, >70=overbought (avoid)
# Recommended: 45-65 (tight), 40-70 (balanced), 35-75 (loose)
RSI_MIN=40
RSI_MAX=70

# ADX_PERIOD: Period for ADX calculation (standard: 14)
ADX_PERIOD=14

# ADX_THRESHOLD: Minimum ADX to confirm strong trend
# ADX <25 = weak/no trend (skip), ADX â‰¥25 = strong trend (OK to enter)
# Recommended: 30+ (conservative), 25 (balanced), 20 (aggressive)
ADX_THRESHOLD=25

# ATR_PERIOD: Period for ATR (volatility measure, standard: 14)
# Used to calculate stop loss and trailing stop distances
ATR_PERIOD=14

# Risk Management - SPOT Trading (Allocation-Based)
# MAX_USDT_PER_TRADE: Total USDT to allocate per trading signal
# IMPORTANT: Must be > 0 for position size calculation!
# Recommended: 10-20% of total equity as max per trade
MAX_USDT_PER_TRADE=50

# Scale-In Entry Strategy (2 entries per signal)
# ENTRY_1_PERCENT: Percentage of MAX_USDT for first entry (recommended: 30-40%)
# ENTRY_2_PERCENT: Percentage of MAX_USDT for second entry (recommended: 60-70%)
# Total must equal 100%
ENTRY_1_PERCENT=30
ENTRY_2_PERCENT=70

# STOP_LOSS_ATR_MULTIPLIER: Stop loss distance based on ATR
# Higher = wider SL, bigger potential loss. Recommended: 1.5-2.0x ATR
STOP_LOSS_ATR_MULTIPLIER=2.5

# TRAILING_STOP_ATR_MULTIPLIER: Trailing stop to protect profit
# Lower = tighter trail, faster exit. Recommended: 1.0-1.5x ATR
TRAILING_STOP_ATR_MULTIPLIER=2.0

# TP1_RR: Risk/Reward ratio for Take Profit 1 (1.0 = 1:1)
# TP1_PERCENT: Percentage of position to close at TP1
TP1_RR=1.0
TP1_PERCENT=30

# TP2_RR: Risk/Reward ratio for Take Profit 2 (2.0 = 2:1)
# TP2_PERCENT: Percentage of position to close at TP2 (remaining will use trailing stop)
TP2_RR=2.0
TP2_PERCENT=50

# MAX_CANDLES_HOLD: Maximum candles to hold position (auto close after)
# For 1H timeframe: 15-20 candles = 15-20 hours
MAX_CANDLES_HOLD=18

# Trading Mode
DRY_RUN=false   

# Logging
LOG_LEVEL=INFO
